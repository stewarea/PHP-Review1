<html>
<head>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    <title>My Contacts</title>
</head>
<body>
    <div class="container">
        <h1>Address Book</h1></br>

        {% if contacts is not empty %}
            <ul class='list-group'>
                <h3>My Contact List</h3>
                {% for contact in contacts %}
                    <li class='list-group-item active'>{{ contact.getName }}</li>
                    <li class='list-group-item'>{{ contact.getPhone }}</li>
                    <li class='list-group-item'>{{ contact.getAddress }}</li>
                {% endfor %}
            </ul>
        {% endif %}

        <form action='/create_contact' method='post'>
            <div class="form-group">
                <label for='fullName'>Contact Name</label>
                <input id='fullName' name='fullName' type='text' class='form-control'>
            </div>
            <div class="form-group">
                <label for='phoneNumber'>Phone Number</label>
                <input id='phoneNumber' name='phoneNumber' type='number' class='form-control'>
            </div>
            <div class="form-group">
                <label for='fullStreet'>Street Address</label>
                <input id='fullStreet' name='fullStreet' type='text' class='form-control'>
            </div>
            <div class="form-group">
                <label for='fullState'>City, State and Zip</label>
                <input id='fullState' name='fullState' type='text' class='form-control'>
            </div>
            <button type='submit' class='btn btn-info'>Add A Contact</button>
        </form>
        <form action='/delete_contacts' method='post'>
            <button type='submit' class='btn btn-default'>Clear Contact List</button>
        </form>
    </div>
</body>
</html>
